{
  "name": "trilogy",
  "version": "2.0.0-beta.1",
  "description": "No-hassle SQLite with a document store style API.",
  "license": "MIT",
  "author": {
    "name": "Bo Lingen",
    "email": "lingenbw@gmail.com",
    "url": "https://github.com/citycide"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/citycide/trilogy"
  },
  "homepage": "https://citycide.github.io/trilogy",
  "bugs": "https://github.com/citycide/trilogy/issues",
  "keywords": [
    "knex",
    "model",
    "schema",
    "sqlite",
    "sql.js",
    "storage",
    "database",
    "electron",
    "mongoose",
    "document",
    "typescript"
  ],
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "es"
  ],
  "main": "dist/index.js",
  "module": "es/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint && rimraf dist es",
    "build": "npm run build:dist && npm run build:es",
    "build:dist": "tsc -d",
    "build:es": "tsc -m es2015 --outDir es",
    "test": "ava-ts",
    "lint": "tslint -p tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "docsify serve docs",
    "changelog": "changelog",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "generic-pool": "^3.4.2",
    "io-ts": "^1.0.5",
    "knex": "^0.14.5",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@citycide/changelog": "^1.0.0",
    "@types/generic-pool": "^3.1.2",
    "@types/knex": "^0.14.9",
    "@types/node": "^8.5.2",
    "@types/rimraf": "^2.0.2",
    "@types/sql.js": "^0.0.29",
    "ava": "0.25.0",
    "ava-ts": "^0.24.2",
    "cpy-cli": "^1.0.1",
    "docsify-cli": "^4.2.1",
    "rimraf": "^2.6.2",
    "sql.js": "^0.5.0",
    "sqlite3": "^4.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.1"
  },
  "ava": {
    "files": [
      "tests/**/*.ts"
    ]
  }
