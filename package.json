{
  "name": "trilogy",
  "version": "2.0.0-rc.3",
  "description": "No-hassle SQLite with a document store style API.",
  "license": "MIT",
  "author": "Bo Lingen <lingenbw@gmail.com> (https://github.com/citycide)",
  "repository": "https://github.com/citycide/trilogy",
  "homepage": "https://citycide.github.io/trilogy",
  "bugs": "https://github.com/citycide/trilogy/issues",
  "keywords": [
    "knex",
    "model",
    "schema",
    "sqlite",
    "sql.js",
    "storage",
    "database",
    "electron",
    "mongoose",
    "document",
    "typescript"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "files": [
    "dist",
    "es"
  ],
  "main": "dist/index.js",
  "module": "es/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint && rimraf dist es",
    "build": "npm run build:dist && npm run build:es",
    "build:dist": "tsc -d",
    "build:es": "tsc -m es2015 --outDir es",
    "test": "ava",
    "lint": "tslint -p tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "docsify serve docs",
    "changelog": "changelog",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "generic-pool": "^3.5.0",
    "io-ts": "^1.7.1",
    "knex": "^0.16.3",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@citycide/changelog": "^1.0.0",
    "@types/generic-pool": "^3.1.7",
    "@types/node": "^10.5.8",
    "@types/rimraf": "^2.0.2",
    "@types/sql.js": "^0.0.29",
    "ava": "^1.2.0",
    "cpy-cli": "^2.0.0",
    "docsify-cli": "^4.3.0",
    "rimraf": "^2.6.3",
    "sql.js": "^0.5.0",
    "sqlite3": "^4.0.6",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.4"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
